<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"


     android:background = "#DDDDDD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:orientation="vertical"
          >

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_down">

            </ImageView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_white_tl_tr_br_round_20"


                android:orientation="vertical">
               <!-- android:layout_height="?android:attr/actionBarSize"-->
                <LinearLayout
                    android:id="@+id/appBarLayout"
                    android:background="@drawable/bg_white_tl_tr_round_20"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                  ></LinearLayout>

                <View
                    android:id="@+id/lineview"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/appBarLayout"
                    android:background="@color/quantum_grey"></View>
                 <LinearLayout

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                <include
                    layout="@layout/rating_items"
                    android:layout_width="match_parent"

                    android:layout_height="300dp">


                </include>
                 </LinearLayout>

                <TextView
                    android:id="@+id/textViewContinue"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/simpleSeekBar"
                    android:layout_gravity="center"

                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_bluelight_tl_tr_br_round_30"
                    android:fontFamily="@font/cabin_semi_bold"
                    android:gravity="center"
                    android:text="Done"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>