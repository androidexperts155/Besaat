<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rlRoot"
    android:padding="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_stroke_light_gray_round_all_side_4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_6sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_close"
            android:tint="@color/colorLightGray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/cabin_semi_bold"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Make Offer"
            android:textColor="@color/colorYellowDark"
            android:textSize="@dimen/_16ssp" />


        <TextView
            android:id="@+id/tvRatingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/please_enter_your_offer_price"

            android:textAlignment="center"
            android:textColor="@color/colorLightBlack2"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/edOfferPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/bg_light_whitish_blue_tl_br_bl_round_30"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:hint="Offer price ($)"
            android:inputType="numberDecimal"
            android:minHeight="@dimen/_52sdp"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorDarkSkyBlue"
                android:background="@drawable/bg_light_pink_tl_bl_br_round_30"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>