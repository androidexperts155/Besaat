<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_whiteuncream_tl_tr_round_20">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewStoreListingAdapter"/>
    <RelativeLayout
        android:id="@+id/relativeText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:text="@string/no_store_availed_please_change_filter_value_to_list_the_store"/>
    </RelativeLayout>
</LinearLayout>
</layout>