<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.99"
    android:background="#E8E8E8"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/_16sdp"
            android:background="@drawable/shadow">
            <!--        bg_white_bl_roundtwo_20-->

            <TextView
                android:id="@+id/textreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                android:fontFamily="@font/cabin_medium"
                android:layout_alignTop="@id/imageCross"
                android:layout_alignBottom="@id/imageCross"
                android:text="Reset Filter"
                android:textColor="@color/colorGoogle"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/imageCross"
                android:layout_width="@dimen/_40sdp"
                android:padding="@dimen/_8sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:src="@drawable/ic_close_black_24dp" />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/imageCross"
                android:layout_alignTop="@id/imageCross"
                android:layout_alignBottom="@id/imageCross"
                android:text="Filter"
                android:fontFamily="@font/cabin_medium"
                android:textAllCaps="true"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_18sdp"/>

            <include
                android:id="@+id/includetoplayout"
                layout="@layout/rating_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCross"/>

            <TextView
                android:id="@+id/textViewContinue2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@+id/includetoplayout"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bg_bluelight_tl_tr_br_round_30"
                android:fontFamily="@font/cabin_semi_bold"
                android:gravity="center"
                android:text="Apply"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp">

            </TextView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>